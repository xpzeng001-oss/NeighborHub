/* ===== 全局样式 ===== */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size: 28rpx;
  color: #1A1A1A;
  background-color: #F7F8F3;
  line-height: 1.5;
  box-sizing: border-box;
}

/* ===== 色彩变量（通过class实现） ===== */
.text-primary { color: #1A1A1A; }
.text-secondary { color: #AAAAAA; }
.text-danger { color: #E8636F; }
.text-warning { color: #E8883C; }
.text-white { color: #fff; }
.bg-primary { background-color: #7CB342; }
.bg-white { background-color: #fff; }

/* ===== 布局工具 ===== */
.flex { display: flex; }
.flex-col { display: flex; flex-direction: column; }
.flex-wrap { flex-wrap: wrap; }
.items-center { align-items: center; }
.justify-center { justify-content: center; }
.justify-between { justify-content: space-between; }
.flex-1 { flex: 1; }

/* ===== 间距 ===== */
.p-20 { padding: 20rpx; }
.p-24 { padding: 24rpx; }
.p-30 { padding: 30rpx; }
.px-24 { padding-left: 24rpx; padding-right: 24rpx; }
.py-20 { padding-top: 20rpx; padding-bottom: 20rpx; }
.mt-20 { margin-top: 20rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-16 { margin-bottom: 16rpx; }
.mr-16 { margin-right: 16rpx; }

/* ===== 圆角 ===== */
.rounded-12 { border-radius: 12rpx; }
.rounded-16 { border-radius: 16rpx; }
.rounded-full { border-radius: 50%; }

/* ===== 阴影 ===== */
.shadow-sm {
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}
.shadow-md {
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* ===== 文字 ===== */
.text-xs { font-size: 22rpx; }
.text-sm { font-size: 24rpx; }
.text-base { font-size: 28rpx; }
.text-lg { font-size: 32rpx; }
.text-xl { font-size: 36rpx; }
.text-2xl { font-size: 40rpx; }
.font-bold { font-weight: 600; }
.text-ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.line-clamp-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* ===== 通用卡片 ===== */
.card {
  background: #fff;
  border-radius: 16rpx;
  margin: 0 24rpx 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* ===== 按钮 ===== */
.btn-primary {
  background: #1A1A1A;
  color: #fff;
  border: none;
  border-radius: 44rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: 500;
}
.btn-primary::after { border: none; }

.btn-outline {
  background: transparent;
  color: #1A1A1A;
  border: 2rpx solid #1A1A1A;
  border-radius: 44rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  font-size: 26rpx;
}
.btn-outline::after { border: none; }

/* ===== 标签 ===== */
.tag {
  display: inline-block;
  padding: 8rpx 18rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  margin-right: 0;
}
.tag-green {
  background: rgba(91, 140, 62, 0.15);
  color: #5B8C3E;
}
.tag-orange {
  background: rgba(232, 136, 60, 0.1);
  color: #E8883C;
}
.tag-blue {
  background: rgba(74, 144, 217, 0.1);
  color: #4A90D9;
}
.tag-red {
  background: rgba(232, 99, 111, 0.1);
  color: #E8636F;
}

/* ===== 分割线 ===== */
.divider {
  height: 1rpx;
  background: #f0f0f0;
  margin: 20rpx 0;
}

/* ===== 安全区 ===== */
.safe-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* ===== 加载更多 ===== */
.load-more {
  text-align: center;
  padding: 30rpx;
  color: #AAAAAA;
  font-size: 24rpx;
}

/* ===== 空状态 ===== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}
.empty-state icon {
  margin-bottom: 24rpx;
}
.empty-state .text {
  color: #AAAAAA;
  font-size: 28rpx;
}
