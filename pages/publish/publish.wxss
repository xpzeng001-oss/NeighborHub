/* pages/publish/publish.wxss */
.page { height: 100vh; display: flex; flex-direction: column; background: #f5f6fa; }

.custom-nav-wrap {
  background: #fff;
}
.custom-nav-bar {
  height: 88rpx;
  display: flex;
  align-items: center;
  position: relative;
}
.nav-back {
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
}
.nav-arrow {
  width: 20rpx;
  height: 20rpx;
  border-left: 4rpx solid #333;
  border-bottom: 4rpx solid #333;
  transform: rotate(45deg);
}
.nav-title {
  position: absolute;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.type-tabs {
  display: flex;
  background: #fff;
  padding: 20rpx 16rpx;
  gap: 12rpx;
}
.type-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 18rpx 0;
  border-radius: 16rpx;
  background: #f8f8fa;
  font-size: 24rpx;
  color: #888;
  gap: 8rpx;
}
.type-tab.active {
  background: rgba(200, 255, 0, 0.12);
  color: #7A9900;
  font-weight: 500;
}
.type-tab icon { margin-bottom: 4rpx; }

.form-scroll { flex: 1; height: 0; }

.form-section {
  background: #fff;
  margin-top: 16rpx;
  padding: 0 30rpx;
}
.form-section:first-child { margin-top: 0; }

.form-item {
  display: flex;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}
.form-item:last-child { border-bottom: none; }

.form-item-col {
  display: flex;
  flex-direction: column;
  padding: 28rpx 0;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  width: 160rpx;
  flex-shrink: 0;
  font-weight: 500;
}
.form-item-col .form-label { margin-bottom: 16rpx; }

.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}
.form-value {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.form-value .placeholder { color: #ccc; }
.form-arrow { color: #ccc; margin-left: 10rpx; font-size: 32rpx; }
.form-unit { color: #999; font-size: 26rpx; margin-left: 8rpx; }

.form-textarea {
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

/* 图片上传 */
.upload-area { padding: 24rpx 0; }
.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.image-item {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}
.uploaded-img { width: 100%; height: 100%; }
.remove-btn {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.5);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
}
.add-btn {
  background: #f8f8fa;
  border: 2rpx dashed #ddd;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}
.add-btn icon { margin-bottom: 4rpx; }
.add-text { font-size: 22rpx; color: #bbb; }

/* 发布按钮 */
.publish-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx 30rpx;
  padding-bottom: calc(16rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.06);
}
.btn-publish {
  width: 100%;
  background: #1A1A1A;
  color: #fff;
  border: none;
  border-radius: 48rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 34rpx;
  font-weight: 600;
  text-align: center;
}
.btn-publish::after { border: none; }
