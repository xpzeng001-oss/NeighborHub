/* pages/publish/publish.wxss */
.page { height: 100vh; display: flex; flex-direction: column; background: #F7F8F3; }

/* 导航栏 */
.custom-nav-wrap {
  background: #F7F8F3;
}
.custom-nav-bar {
  height: 88rpx;
  display: flex;
  align-items: center;
  position: relative;
}
.nav-back {
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
}
.nav-title {
  position: absolute;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 34rpx;
  font-weight: 700;
  color: #1A1A1A;
}

/* 发布类型选择 - 水平滚动胶囊 */
.type-scroll {
  white-space: nowrap;
  padding: 16rpx 0 8rpx;
}
.type-tabs {
  display: flex;
  padding: 0 32rpx;
  gap: 16rpx;
}
.type-tab {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 14rpx 24rpx;
  background: #EFF6E8;
  border-radius: 32rpx;
  flex-shrink: 0;
}
.type-tab text {
  font-size: 26rpx;
  color: #1A1A1A;
  font-weight: 500;
  white-space: nowrap;
}
.type-tab.active {
  background: #5B8C3E;
}
.type-tab.active text {
  color: #fff;
  font-weight: 600;
}

.form-scroll { flex: 1; height: 0; }

/* 表单卡片 */
.form-section {
  background: #fff;
  margin: 16rpx 32rpx 0;
  padding: 0 28rpx;
  border-radius: 16rpx;
}
.form-section:first-child { margin-top: 16rpx; }

.form-item {
  display: flex;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 1rpx solid #F5F5F0;
}
.form-item:last-child { border-bottom: none; }

.form-item-col {
  display: flex;
  flex-direction: column;
  padding: 28rpx 0;
}

.form-label {
  font-size: 28rpx;
  color: #1A1A1A;
  width: 160rpx;
  flex-shrink: 0;
  font-weight: 500;
}
.form-item-col .form-label { margin-bottom: 16rpx; }

.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #1A1A1A;
}
.form-value {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.form-value .placeholder { color: #AAAAAA; }
.form-unit { color: #AAAAAA; font-size: 26rpx; margin-left: 8rpx; }

.form-textarea {
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #1A1A1A;
}

/* 图片上传 */
.upload-area { padding: 24rpx 0; }
.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.image-item {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
}
.uploaded-img { width: 100%; height: 100%; }
.remove-btn {
  position: absolute;
  top: 6rpx;
  right: 6rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.45);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.add-btn {
  background: #F7F8F3;
  border: 2rpx dashed #CCCCCC;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}
.add-text { font-size: 22rpx; color: #AAAAAA; }

/* 发布按钮 */
.publish-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx 32rpx;
  padding-bottom: calc(16rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background: #F7F8F3;
}
.btn-publish {
  width: 100%;
  background: linear-gradient(135deg, #7CB342 0%, #5B8C3E 100%);
  color: #fff;
  border: none;
  border-radius: 16rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 34rpx;
  font-weight: 600;
  text-align: center;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  box-shadow: 0 6rpx 20rpx rgba(91, 140, 62, 0.3);
}
.btn-publish::after { border: none; }

/* 宠物喂养类型选择 */
.pet-type-selector {
  display: flex;
  gap: 16rpx;
}
.pet-type-option {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 20rpx 0;
  border-radius: 16rpx;
  background: #F7F8F3;
  font-size: 24rpx;
  color: #AAAAAA;
}
.pet-type-option.active.type-need {
  background: rgba(232, 136, 60, 0.1);
  color: #E8883C;
  font-weight: 500;
}
.pet-type-option.active.type-offer {
  background: rgba(91, 140, 62, 0.1);
  color: #5B8C3E;
  font-weight: 500;
}
.pet-type-option.active.type-social {
  background: rgba(139, 109, 176, 0.1);
  color: #8B6DB0;
  font-weight: 500;
}

/* 标签输入 */
.tag-input-area {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  align-items: center;
}
.tag-item {
  display: flex;
  align-items: center;
  background: #EFF6E8;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  color: #5B8C3E;
  gap: 8rpx;
}
.tag-remove {
  font-size: 28rpx;
  color: #AAAAAA;
  line-height: 1;
}
.tag-input {
  flex: 1;
  min-width: 200rpx;
  font-size: 26rpx;
  color: #1A1A1A;
  height: 56rpx;
}
