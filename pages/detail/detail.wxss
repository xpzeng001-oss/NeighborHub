/* pages/detail/detail.wxss */
.page { height: 100vh; display: flex; flex-direction: column; background: #f5f6fa; }
.scroll-content { flex: 1; height: 0; }

.image-swiper { height: 600rpx; background: #eee; }
.swiper-img { width: 100%; height: 100%; }

.price-section {
  background: #fff;
  padding: 30rpx;
}
.price-row { display: flex; align-items: baseline; gap: 16rpx; }
.price { font-size: 48rpx; color: #fa5151; font-weight: 700; }
.price.free { font-size: 40rpx; color: #7A9900; }
.original { font-size: 26rpx; color: #bbb; text-decoration: line-through; }
.tags { display: flex; margin-top: 16rpx; }
.title { display: block; font-size: 34rpx; font-weight: 600; margin-top: 20rpx; line-height: 1.5; color: #222; }

.section {
  background: #fff;
  margin-top: 16rpx;
  padding: 30rpx;
}
.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}
.description {
  font-size: 28rpx;
  color: #555;
  line-height: 1.7;
}
.meta-row { margin-top: 20rpx; }
.meta { font-size: 24rpx; color: #888; }

.seller-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.seller-left { display: flex; align-items: center; }
.seller-avatar { width: 88rpx; height: 88rpx; border-radius: 50%; margin-right: 20rpx; background: #f0f0f0; }
.seller-info { display: flex; flex-direction: column; }
.seller-name { font-size: 30rpx; font-weight: 500; color: #333; }
.seller-building { font-size: 24rpx; color: #999; margin-top: 4rpx; }
.seller-arrow { font-size: 40rpx; color: #ccc; }

.stats-row {
  display: flex;
  justify-content: space-around;
}
.stat-item { display: flex; flex-direction: column; align-items: center; }
.stat-value { font-size: 32rpx; font-weight: 600; color: #333; }
.stat-label { font-size: 22rpx; color: #999; margin-top: 6rpx; }

.report-row {
  text-align: center;
  padding: 30rpx;
}
.report-text { font-size: 24rpx; color: #ccc; }

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.06);
  z-index: 100;
}
.bar-left {
  display: flex;
  gap: 30rpx;
  margin-right: 24rpx;
}
.bar-icon-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.bar-icon { font-size: 40rpx; }
.bar-icon-label { font-size: 20rpx; color: #888; margin-top: 2rpx; }
.bar-right {
  flex: 1;
  display: flex;
  gap: 16rpx;
}
.btn-chat {
  flex: 1;
  height: 76rpx;
  line-height: 76rpx;
  text-align: center;
  font-size: 28rpx;
  background: #fff;
  color: #1A1A1A;
  border: 2rpx solid #1A1A1A;
  border-radius: 40rpx;
  padding: 0;
}
.btn-chat::after { border: none; }
.btn-want {
  flex: 1;
  height: 76rpx;
  line-height: 76rpx;
  text-align: center;
  font-size: 28rpx;
  background: #1A1A1A;
  color: #fff;
  border: none;
  border-radius: 40rpx;
  padding: 0;
  font-weight: 500;
}
.btn-want::after { border: none; }
