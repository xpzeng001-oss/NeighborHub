.page { min-height: 100vh; background: #F7F8F3; padding: 16rpx 0; }

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 300rpx;
  gap: 20rpx;
}
.empty-text { font-size: 28rpx; color: #AAAAAA; }

/* 商品列表 */
.product-item {
  display: flex;
  padding: 24rpx 28rpx;
  margin: 0 32rpx 16rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}
.product-item:active { background: #F7F8F3; }

.product-img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  background: #F7F8F3;
  margin-right: 24rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.product-title {
  font-size: 28rpx;
  color: #1A1A1A;
  font-weight: 500;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.5;
}
.product-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.product-price { font-size: 32rpx; color: #5B8C3E; font-weight: 700; }
.product-free { font-size: 26rpx; color: #5B8C3E; font-weight: 600; }
.product-status {
  font-size: 22rpx;
  color: #5B8C3E;
  background: #EFF6E8;
  padding: 6rpx 18rpx;
  border-radius: 20rpx;
  font-weight: 500;
}
.product-status.sold {
  color: #AAAAAA;
  background: #F5F5F0;
}

/* 帮忙列表 */
.help-item {
  padding: 28rpx 28rpx;
  margin: 0 32rpx 16rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}
.help-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}
.help-title {
  font-size: 30rpx;
  color: #1A1A1A;
  font-weight: 600;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.help-tag {
  font-size: 22rpx;
  color: #AAAAAA;
  background: #F7F8F3;
  padding: 6rpx 18rpx;
  border-radius: 20rpx;
  flex-shrink: 0;
  margin-left: 16rpx;
}
.help-tag.urgent {
  color: #E8636F;
  background: rgba(232, 99, 111, 0.08);
}
.help-desc {
  font-size: 26rpx;
  color: #AAAAAA;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 12rpx;
  line-height: 1.6;
}
.help-footer { display: flex; justify-content: flex-end; }
.help-status {
  font-size: 22rpx;
  color: #D4A04A;
  font-weight: 500;
}
.help-status.done { color: #5B8C3E; }

.loading-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 24rpx;
  color: #AAAAAA;
}
