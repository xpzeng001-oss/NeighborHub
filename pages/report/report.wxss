.page { min-height: 100vh; background: #f5f6fa; }

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 300rpx;
  gap: 16rpx;
}
.empty-text { font-size: 28rpx; color: #bbb; }
.empty-hint { font-size: 24rpx; color: #ddd; }

.report-item {
  padding: 28rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}
.report-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}
.report-type { font-size: 30rpx; color: #333; font-weight: 500; }
.report-status {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}
.report-status.pending { color: #faad14; background: rgba(250, 173, 20, 0.1); }
.report-status.resolved { color: #52c41a; background: rgba(82, 196, 26, 0.1); }
.report-status.rejected { color: #999; background: #f0f0f0; }

.report-reason { font-size: 28rpx; color: #666; display: block; }
.report-desc {
  font-size: 26rpx;
  color: #999;
  display: block;
  margin-top: 8rpx;
}
.report-time {
  font-size: 22rpx;
  color: #ccc;
  display: block;
  margin-top: 12rpx;
}
