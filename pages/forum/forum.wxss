/* pages/forum/forum.wxss */
.page { background: #f5f6fa; min-height: 100vh; display: flex; flex-direction: column; }

.forum-tabs {
  display: flex;
  background: #fff;
  padding: 0 24rpx;
  gap: 8rpx;
}
.forum-tab {
  padding: 24rpx 28rpx;
  font-size: 28rpx;
  color: #888;
  position: relative;
}
.forum-tab.active {
  color: #1A1A1A;
  font-weight: 600;
}
.forum-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background: #C8FF00;
  border-radius: 3rpx;
}

.scroll-content { flex: 1; height: 0; }
.post-list { padding: 16rpx 24rpx; }

.post-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}

.top-badge {
  font-size: 22rpx;
  color: #fa5151;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.post-avatar { width: 72rpx; height: 72rpx; border-radius: 50%; margin-right: 16rpx; background: #f0f0f0; }
.post-user { flex: 1; }
.post-username { font-size: 28rpx; color: #333; font-weight: 500; display: block; }
.post-time { font-size: 22rpx; color: #bbb; }

.category-tag {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}
.tag-announcement { background: rgba(250, 81, 81, 0.1); color: #fa5151; }
.tag-complaint { background: rgba(255, 151, 106, 0.1); color: #ff976a; }
.tag-question { background: rgba(16, 174, 255, 0.1); color: #10aeff; }
.tag-activity { background: rgba(200, 255, 0, 0.15); color: #7A9900; }

.post-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #222;
  display: block;
  margin-bottom: 12rpx;
}
.post-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.post-footer {
  display: flex;
  gap: 40rpx;
  margin-top: 20rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f5f5f5;
}
.footer-item { font-size: 24rpx; color: #999; display: inline-flex; align-items: center; gap: 6rpx; }
.top-badge { display: inline-flex; align-items: center; gap: 4rpx; }

/* 浮动按钮 */
.fab-btn {
  position: fixed;
  right: 40rpx;
  bottom: 60rpx;
  width: 100rpx;
  height: 100rpx;
  background: #C8FF00;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  box-shadow: 0 8rpx 30rpx rgba(200, 255, 0, 0.35);
}
