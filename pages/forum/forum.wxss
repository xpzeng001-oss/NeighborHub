/* pages/forum/forum.wxss */
.page { background: #F7F8F3; min-height: 100vh; display: flex; flex-direction: column; }

.forum-tabs {
  display: flex;
  background: #fff;
  padding: 0 24rpx;
  gap: 8rpx;
}
.forum-tab {
  padding: 24rpx 28rpx;
  font-size: 28rpx;
  color: #AAAAAA;
  position: relative;
}
.forum-tab.active {
  color: #1A1A1A;
  font-weight: 600;
}
.forum-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background: #7CB342;
  border-radius: 3rpx;
}

.scroll-content { flex: 1; height: 0; }
.post-list { padding: 16rpx 24rpx; }

.post-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}

.top-badge {
  font-size: 22rpx;
  color: #E8636F;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.post-avatar { width: 72rpx; height: 72rpx; border-radius: 50%; margin-right: 16rpx; background: #f0f0f0; }
.post-user { flex: 1; }
.post-username { font-size: 28rpx; color: #1A1A1A; font-weight: 500; display: block; }
.post-time { font-size: 22rpx; color: #AAAAAA; }

.category-tag {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}
.tag-announcement { background: rgba(232, 99, 111, 0.1); color: #E8636F; }
.tag-complaint { background: rgba(232, 136, 60, 0.1); color: #E8883C; }
.tag-question { background: rgba(74, 144, 217, 0.1); color: #4A90D9; }
.tag-activity { background: rgba(91, 140, 62, 0.15); color: #5B8C3E; }

.post-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1A1A1A;
  display: block;
  margin-bottom: 12rpx;
}
.post-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.post-footer {
  display: flex;
  gap: 40rpx;
  margin-top: 20rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #F5F5F0;
}
.footer-item { font-size: 24rpx; color: #AAAAAA; display: inline-flex; align-items: center; gap: 6rpx; }
.top-badge { display: inline-flex; align-items: center; gap: 4rpx; }

/* 浮动按钮 */
.fab-btn {
  position: fixed;
  right: 40rpx;
  bottom: 60rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #7CB342 0%, #5B8C3E 100%);
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  box-shadow: 0 8rpx 24rpx rgba(91, 140, 62, 0.4);
}
