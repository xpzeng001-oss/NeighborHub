/* pages/mine/mine.wxss */
.page { background: #F7F8F3; min-height: 100vh; }
.scroll-content { height: 100vh; }

.profile-card {
  position: relative;
  overflow: hidden;
}
.profile-bg {
  display: none;
}
.profile-content {
  display: flex;
  align-items: center;
  padding: 8rpx 36rpx 32rpx;
  position: relative;
}
.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
  background: #f0f0f0;
}
.avatar-default { opacity: 0.6; }
.user-info {
  flex: 1;
  margin-left: 24rpx;
}
.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #1A1A1A;
  display: block;
}
.user-meta { margin-top: 8rpx; }
.building { font-size: 24rpx; color: #AAAAAA; }
.login-hint { font-size: 24rpx; color: #AAAAAA; display: block; margin-top: 6rpx; }

.credit-badge {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #7CB342;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
}
.credit-label { font-size: 20rpx; color: rgba(255,255,255,0.8); }
.credit-score { font-size: 36rpx; font-weight: 700; color: #fff; }

/* 统计 */
.stats-card {
  display: flex;
  background: #fff;
  margin: 20rpx 24rpx;
  border-radius: 16rpx;
  padding: 28rpx 0;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}
.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-right: 1rpx solid #f0f0f0;
}
.stat-item:last-child { border-right: none; }
.stat-num { font-size: 36rpx; font-weight: 700; color: #1A1A1A; }
.stat-label { font-size: 22rpx; color: #AAAAAA; margin-top: 6rpx; }

/* 菜单 */
.menu-group {
  background: #fff;
  margin: 20rpx 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}
.menu-title {
  padding: 24rpx 30rpx 8rpx;
  font-size: 22rpx;
  color: #AAAAAA;
  text-transform: uppercase;
}
.menu-item {
  display: flex;
  align-items: center;
  padding: 28rpx 30rpx;
  border-bottom: 1rpx solid #F5F5F0;
}
.menu-item:last-child { border-bottom: none; }
.menu-icon-wrap { margin-right: 20rpx; }
.menu-text { flex: 1; font-size: 28rpx; color: #1A1A1A; }
.menu-arrow-icon { flex-shrink: 0; }
.menu-right { display: flex; align-items: center; gap: 8rpx; }
.verify-status { font-size: 24rpx; color: #E8883C; }
.verify-status.verified { color: #5B8C3E; }
.credit-level { font-size: 24rpx; color: #5B8C3E; }

/* 分享按钮 */
.share-wrap { position: relative; }
.share-btn-hidden {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.share-btn-hidden::after { border: none; }
