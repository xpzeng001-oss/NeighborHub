.page { height: 100vh; display: flex; flex-direction: column; background: #F7F8F3; }

/* 导航栏 */
.nav-bar {
  height: 88rpx;
  display: flex;
  align-items: center;
  position: relative;
  background: #F7F8F3;
}
.nav-back {
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
}
.nav-title {
  position: absolute;
  left: 0; right: 0;
  text-align: center;
  font-size: 34rpx;
  font-weight: 700;
  color: #1A1A1A;
}

.scroll-content { flex: 1; height: 0; }

/* 主卡片 */
.main-card {
  margin: 16rpx 32rpx 0;
  padding: 32rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}

/* 类型标签 */
.type-badge {
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 18rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

/* 标题 */
.detail-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #1A1A1A;
  line-height: 1.5;
  margin-bottom: 24rpx;
}

/* 发布者 */
.author-row {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #F5F5F0;
}
.author-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: #F7F8F3;
  margin-right: 16rpx;
}
.author-info { flex: 1; }
.author-name { font-size: 28rpx; font-weight: 600; color: #1A1A1A; display: block; }
.author-building { font-size: 22rpx; color: #AAAAAA; }
.publish-time { font-size: 22rpx; color: #AAAAAA; }

/* 描述 */
.detail-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

/* 信息卡片 */
.info-card {
  margin: 16rpx 32rpx 0;
  padding: 28rpx 32rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}
.info-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F5F5F0;
}
.info-item:last-child { border-bottom: none; }
.info-content { flex: 1; }
.info-label { font-size: 22rpx; color: #AAAAAA; display: block; margin-bottom: 4rpx; }
.info-value { font-size: 28rpx; color: #1A1A1A; font-weight: 500; }
.reward-value { color: #5B8C3E; font-weight: 700; }

/* 标签 */
.tags-card {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin: 16rpx 32rpx 0;
  padding: 28rpx 32rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}
.pet-tag {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background: #EFF6E8;
  color: #5B8C3E;
}

/* 参与人员 */
.members-card {
  margin: 16rpx 32rpx 0;
  padding: 28rpx 32rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}
.members-header {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  margin-bottom: 24rpx;
}
.members-title { font-size: 30rpx; font-weight: 700; color: #1A1A1A; }
.members-count { font-size: 26rpx; color: #5B8C3E; font-weight: 600; }

.members-list {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}
.member-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}
.member-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #F7F8F3;
}
.member-name { font-size: 22rpx; color: #AAAAAA; max-width: 80rpx; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }

.members-empty {
  padding: 20rpx 0;
}
.members-empty text { font-size: 26rpx; color: #AAAAAA; }

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0; left: 0; right: 0;
  display: flex;
  align-items: center;
  padding: 16rpx 32rpx;
  background: #fff;
  box-shadow: 0 -2rpx 16rpx rgba(0,0,0,0.05);
  gap: 16rpx;
  z-index: 100;
}
.safe-bottom {
  padding-bottom: calc(16rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
}

.btn-msg {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  height: 84rpx;
  padding: 0 36rpx;
  background: #F7F8F3;
  border-radius: 16rpx;
}
.btn-msg text { font-size: 26rpx; color: #1A1A1A; font-weight: 500; }

.btn-action {
  flex: 1;
  height: 84rpx;
  line-height: 84rpx;
  text-align: center;
  background: #5B8C3E;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
}
.btn-action:active { opacity: 0.85; }
.btn-disabled {
  background: #F5F5F0;
  color: #AAAAAA;
}
.btn-disabled:active { opacity: 1; }
