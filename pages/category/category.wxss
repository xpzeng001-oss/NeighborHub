/* pages/category/category.wxss */
.page {
  min-height: 100vh;
  background: #F7F8F3;
}

.page-header {
  padding: 20rpx 36rpx 32rpx;
}
.page-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1A1A1A;
}

/* 分类卡片网格 - 2列 */
.cat-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 0 24rpx;
  gap: 20rpx;
}
.cat-card {
  width: calc(50% - 10rpx);
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 28rpx 28rpx 24rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  box-sizing: border-box;
}
.cat-card:active {
  background: #F7F8F3;
}
.cat-icon {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}
.cat-name {
  font-size: 30rpx;
  color: #1A1A1A;
  font-weight: 700;
  margin-bottom: 6rpx;
}
.cat-count {
  font-size: 24rpx;
  color: #AAAAAA;
}

/* 社区数据卡片 */
.stats-card {
  margin: 32rpx 24rpx 0;
  padding: 28rpx 32rpx 32rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}
.stats-header {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 28rpx;
}
.stats-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1A1A1A;
}
.stats-row {
  display: flex;
  justify-content: space-around;
}
.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 6rpx;
}
.stat-label {
  font-size: 22rpx;
  color: #AAAAAA;
}
