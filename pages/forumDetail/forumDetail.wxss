/* pages/forumDetail/forumDetail.wxss */
.page { height: 100vh; display: flex; flex-direction: column; background: #f5f6fa; }
.scroll-content { flex: 1; height: 0; }

.post-detail { background: #fff; padding: 30rpx; }
.post-header { display: flex; align-items: center; margin-bottom: 24rpx; }
.post-avatar { width: 80rpx; height: 80rpx; border-radius: 50%; margin-right: 20rpx; background: #f0f0f0; }
.post-user { flex: 1; }
.post-username { font-size: 30rpx; font-weight: 500; color: #333; display: block; }
.post-time { font-size: 22rpx; color: #bbb; }
.post-title { font-size: 36rpx; font-weight: 700; color: #222; display: block; margin-bottom: 20rpx; line-height: 1.4; }
.post-content { font-size: 28rpx; color: #555; line-height: 1.8; display: block; }
.post-images { margin-top: 20rpx; }
.post-img { width: 100%; border-radius: 12rpx; margin-bottom: 12rpx; }
.post-stats { display: flex; gap: 40rpx; margin-top: 24rpx; padding-top: 20rpx; border-top: 1rpx solid #f0f0f0; }
.stat { font-size: 26rpx; color: #888; }

.comment-section { background: #fff; margin-top: 16rpx; padding: 30rpx; }
.section-title { font-size: 30rpx; font-weight: 600; color: #333; margin-bottom: 24rpx; display: block; }
.comment-item { display: flex; padding: 20rpx 0; border-bottom: 1rpx solid #f8f8f8; }
.comment-item:last-child { border-bottom: none; }
.comment-avatar { width: 64rpx; height: 64rpx; border-radius: 50%; margin-right: 16rpx; background: #f0f0f0; flex-shrink: 0; }
.comment-body { flex: 1; }
.comment-name { font-size: 26rpx; color: #333; font-weight: 500; display: block; }
.comment-text { font-size: 28rpx; color: #555; margin-top: 8rpx; display: block; line-height: 1.5; }
.comment-time { font-size: 22rpx; color: #ccc; margin-top: 8rpx; display: block; }
.empty-comment { text-align: center; padding: 40rpx; }

.comment-bar {
  position: fixed; bottom: 0; left: 0; right: 0;
  display: flex; align-items: center;
  background: #fff; padding: 16rpx 24rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.06);
  gap: 16rpx;
}
.comment-input {
  flex: 1; height: 72rpx; background: #f5f6fa;
  border-radius: 36rpx; padding: 0 24rpx; font-size: 28rpx;
}
.bar-actions { display: flex; align-items: center; gap: 16rpx; }
.like-btn { font-size: 40rpx; }
.send-btn {
  background: #E6A023; color: #fff; font-size: 26rpx;
  border: none; border-radius: 36rpx; padding: 0 32rpx;
  height: 64rpx; line-height: 64rpx;
}
.send-btn::after { border: none; }
