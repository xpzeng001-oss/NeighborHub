/* pages/forumDetail/forumDetail.wxss */
.page { height: 100vh; display: flex; flex-direction: column; background: #F7F8F3; }
.scroll-content { flex: 1; height: 0; }

/* 帖子主体 */
.post-detail {
  background: #fff;
  margin: 16rpx 32rpx 0;
  padding: 32rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}
.post-header { display: flex; align-items: center; margin-bottom: 24rpx; }
.post-avatar { width: 80rpx; height: 80rpx; border-radius: 50%; margin-right: 16rpx; background: #F7F8F3; }
.post-user { flex: 1; }
.post-username { font-size: 30rpx; font-weight: 600; color: #1A1A1A; display: block; }
.post-time { font-size: 22rpx; color: #AAAAAA; }
.post-title { font-size: 36rpx; font-weight: 700; color: #1A1A1A; display: block; margin-bottom: 20rpx; line-height: 1.5; }
.post-content { font-size: 28rpx; color: #666; line-height: 1.8; display: block; }
.post-images { margin-top: 20rpx; }
.post-img { width: 100%; border-radius: 16rpx; margin-bottom: 12rpx; }
.post-stats {
  display: flex;
  gap: 40rpx;
  margin-top: 24rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #F5F5F0;
}
.stat { font-size: 26rpx; color: #AAAAAA; }

/* 评论区 */
.comment-section {
  background: #fff;
  margin: 16rpx 32rpx 0;
  padding: 32rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}
.section-title { font-size: 30rpx; font-weight: 700; color: #1A1A1A; margin-bottom: 24rpx; display: block; }
.comment-item { display: flex; padding: 20rpx 0; border-bottom: 1rpx solid #F5F5F0; }
.comment-item:last-child { border-bottom: none; }
.comment-avatar { width: 64rpx; height: 64rpx; border-radius: 50%; margin-right: 16rpx; background: #F7F8F3; flex-shrink: 0; }
.comment-body { flex: 1; }
.comment-name { font-size: 26rpx; color: #1A1A1A; font-weight: 600; display: block; }
.comment-text { font-size: 28rpx; color: #666; margin-top: 8rpx; display: block; line-height: 1.6; }
.comment-time { font-size: 22rpx; color: #AAAAAA; margin-top: 8rpx; display: block; }
.empty-comment { text-align: center; padding: 40rpx; font-size: 26rpx; color: #AAAAAA; }

/* 底部评论栏 */
.comment-bar {
  position: fixed; bottom: 0; left: 0; right: 0;
  display: flex; align-items: center;
  background: #fff; padding: 16rpx 32rpx;
  padding-bottom: calc(16rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 16rpx rgba(0,0,0,0.05);
  gap: 16rpx;
}
.comment-input {
  flex: 1; height: 76rpx; background: #F7F8F3;
  border-radius: 16rpx; padding: 0 28rpx; font-size: 28rpx;
}
.bar-actions { display: flex; align-items: center; gap: 16rpx; }
.like-btn { font-size: 40rpx; }
.send-btn {
  background: #5B8C3E; color: #fff; font-size: 26rpx; font-weight: 600;
  border: none; border-radius: 16rpx; padding: 0 32rpx;
  height: 76rpx; line-height: 76rpx;
}
.send-btn::after { border: none; }
