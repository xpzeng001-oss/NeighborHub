/* pages/feedbackList/feedbackList.wxss */
.page { min-height: 100vh; background: #f5f6fa; }
.scroll-content { height: 100vh; }

.feedback-item {
  background: #fff;
  margin: 20rpx 24rpx;
  padding: 28rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}

.fb-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}
.fb-type {
  font-size: 22rpx;
  font-weight: 500;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}
.type-feature { background: rgba(200,255,0,0.15); color: #7A9900; }
.type-bug { background: rgba(250,81,81,0.1); color: #fa5151; }
.type-other { background: rgba(0,0,0,0.05); color: #999; }
.fb-time { font-size: 22rpx; color: #bbb; }

.fb-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.7;
  display: block;
  margin-bottom: 16rpx;
}

.fb-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #f5f5f5;
}
.fb-user { font-size: 24rpx; color: #999; }
.fb-contact { font-size: 24rpx; color: #10aeff; }

.empty-state {
  display: flex;
  justify-content: center;
  padding: 120rpx 0;
}
.empty-text { font-size: 28rpx; color: #999; }

.load-tip {
  text-align: center;
  padding: 24rpx 0;
  font-size: 24rpx;
  color: #ccc;
}