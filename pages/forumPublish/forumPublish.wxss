/* pages/forumPublish/forumPublish.wxss */
.page { min-height: 100vh; background: #F7F8F3; }

.section {
  background: #fff;
  margin: 20rpx 24rpx;
  padding: 28rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}
.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-bottom: 20rpx;
}
.optional { font-size: 24rpx; color: #AAAAAA; font-weight: 400; }

/* 分类选择 */
.category-list { display: flex; gap: 16rpx; }
.cat-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 26rpx;
  color: #666;
  background: #F7F8F3;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
}
.cat-item.active { font-weight: 600; }
.cat-item.cat-announcement { background: rgba(232, 99, 111,0.1); color: #E8636F; border-color: rgba(232, 99, 111,0.3); }
.cat-item.cat-complaint { background: rgba(232, 136, 60,0.1); color: #E8883C; border-color: rgba(232, 136, 60,0.3); }
.cat-item.cat-question { background: rgba(74, 144, 217,0.1); color: #4A90D9; border-color: rgba(74, 144, 217,0.3); }
.cat-item.cat-activity { background: rgba(91, 140, 62,0.15); color: #5B8C3E; border-color: rgba(91, 140, 62,0.5); }

/* 标题输入 */
.title-input {
  font-size: 30rpx;
  font-weight: 600;
  color: #1A1A1A;
  padding: 8rpx 0;
}

/* 内容输入 */
.content-input {
  width: 100%;
  height: 240rpx;
  font-size: 28rpx;
  color: #1A1A1A;
  padding: 0;
  box-sizing: border-box;
}
.word-count {
  text-align: right;
  font-size: 22rpx;
  color: #ccc;
  margin-top: 8rpx;
}

/* 图片上传 */
.image-list { display: flex; flex-wrap: wrap; gap: 16rpx; }
.img-item { position: relative; width: 200rpx; height: 200rpx; }
.img-preview { width: 100%; height: 100%; border-radius: 12rpx; }
.img-del {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.5);
  color: #fff;
  font-size: 28rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.img-add {
  width: 200rpx;
  height: 200rpx;
  background: #F5F5F0;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 提交按钮 */
.btn-wrap { padding: 40rpx 24rpx; }
.submit-btn {
  background: #5B8C3E;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 16rpx;
  padding: 24rpx 0;
  border: none;
}
.submit-btn::after { border: none; }
.submit-btn.disabled { opacity: 0.5; }