/* pages/index/index.wxss */
.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #F7F8F3;
}

/* 导航栏 */
.nav-header {
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  background: #F7F8F3;
}
.community-select {
  display: inline-flex;
  align-items: center;
  gap: 4rpx;
}
.community-name {
  font-size: 30rpx;
  color: #1A1A1A;
  font-weight: 600;
  max-width: 240rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* 搜索栏 */
.search-header {
  padding: 28rpx 32rpx 24rpx;
  background: #F7F8F3;
}
.search-input {
  display: flex;
  align-items: center;
  height: 72rpx;
  background: #fff;
  border-radius: 16rpx;
  border: 1rpx solid #e0e0e0;
  padding: 0 24rpx;
  gap: 12rpx;
}
.search-placeholder {
  font-size: 28rpx;
  color: #AAAAAA;
}

.scroll-content {
  flex: 1;
  height: 0;
}

/* Banner */
.banner-img {
  display: block;
  width: calc(100% - 64rpx);
  height: 240rpx;
  margin: 20rpx 32rpx;
  border-radius: 20rpx;
}

/* 分类胶囊 */
.type-scroll {
  white-space: nowrap;
  padding: 16rpx 0;
}
.type-list {
  display: flex;
  padding: 0 32rpx;
  gap: 16rpx;
}
.type-pill {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 14rpx 24rpx;
  background: #EFF6E8;
  border-radius: 32rpx;
  flex-shrink: 0;
}
.type-pill text {
  font-size: 26rpx;
  color: #1A1A1A;
  font-weight: 500;
  white-space: nowrap;
}
.type-pill.active {
  background: #5B8C3E;
  border-color: #5B8C3E;
}
.type-pill.active text {
  color: #fff;
  font-weight: 600;
}

/* 排序Tab */
.sort-bar {
  display: flex;
  padding: 12rpx 32rpx 8rpx;
  gap: 40rpx;
}
.sort-tab {
  position: relative;
  padding: 12rpx 0;
}
.sort-tab text {
  font-size: 28rpx;
  color: #AAAAAA;
}
.sort-tab.active text {
  color: #1A1A1A;
  font-weight: 700;
}
.sort-line {
  position: absolute;
  bottom: 2rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 32rpx;
  height: 6rpx;
  background: #5B8C3E;
  border-radius: 3rpx;
}

/* 商品瀑布流 */
.product-grid {
  display: flex;
  padding: 16rpx 32rpx 0;
  gap: 16rpx;
}
.grid-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}
.product-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}
.card-image {
  position: relative;
  width: 100%;
}
.product-img {
  width: 100%;
  height: 340rpx;
}
.free-badge {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  background: #E8636F;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 14rpx;
  border-radius: 6rpx;
  font-weight: 500;
}
.card-info {
  padding: 16rpx 20rpx 20rpx;
}
.product-title {
  font-size: 26rpx;
  color: #1A1A1A;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.price-row {
  display: flex;
  align-items: baseline;
  margin-top: 12rpx;
  gap: 10rpx;
}
.price {
  font-size: 34rpx;
  color: #5B8C3E;
  font-weight: 700;
}
.free-price {
  font-size: 28rpx;
  color: #5B8C3E;
}
.original-price {
  font-size: 22rpx;
  color: #AAAAAA;
  text-decoration: line-through;
}
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 12rpx;
}
.seller-info {
  font-size: 22rpx;
  color: #AAAAAA;
}
.want-count {
  font-size: 22rpx;
  color: #AAAAAA;
}

/* 弹窗 */
.modal-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 999;
  display: flex;
  align-items: flex-end;
}
.modal-content {
  width: 100%;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 40rpx;
  max-height: 60vh;
}
.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.modal-title {
  font-size: 34rpx;
  font-weight: 600;
}
.modal-close {
  font-size: 36rpx;
  color: #AAAAAA;
  padding: 10rpx;
}
.community-list { }
.community-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 20rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
}
.community-option.selected {
  background: rgba(91, 140, 62, 0.1);
  color: #5B8C3E;
  font-weight: 500;
}
