/* pages/about/about.wxss */
.page { min-height: 100vh; background: #f5f6fa; }

.app-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0 50rpx;
  background: #1A1A1A;
}
.app-logo-text {
  width: 128rpx;
  height: 128rpx;
  border-radius: 28rpx;
  background: #C8FF00;
  color: #1A1A1A;
  font-size: 64rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
}
.app-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #fff;
  margin-top: 20rpx;
}
.app-version {
  font-size: 24rpx;
  color: #aaa;
  margin-top: 8rpx;
}

.section {
  background: #fff;
  margin: 20rpx 24rpx;
  padding: 28rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}
.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}
.desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}
.feature-item:last-child { border-bottom: none; }
.feature-icon { font-size: 40rpx; margin-right: 20rpx; }
.feature-info { flex: 1; }
.feature-title { font-size: 28rpx; color: #333; font-weight: 500; display: block; }
.feature-desc { font-size: 24rpx; color: #999; margin-top: 4rpx; display: block; }

.contact-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}
.contact-row:last-child { border-bottom: none; }
.contact-label { font-size: 28rpx; color: #333; }
.contact-value { font-size: 28rpx; color: #999; }
.contact-value.link { color: #7A9900; }

.footer {
  text-align: center;
  padding: 40rpx 0 60rpx;
}
.copyright { font-size: 22rpx; color: #ccc; }