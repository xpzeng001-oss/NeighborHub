/* pages/about/about.wxss */
.page { min-height: 100vh; background: #F7F8F3; }

.app-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0 50rpx;
  background: #1A1A1A;
}
.app-logo-text {
  width: 128rpx;
  height: 128rpx;
  border-radius: 28rpx;
  background: #7CB342;
  color: #1A1A1A;
  font-size: 64rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
}
.app-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #fff;
  margin-top: 20rpx;
}
.app-version {
  font-size: 24rpx;
  color: #AAAAAA;
  margin-top: 8rpx;
}

.section {
  background: #fff;
  margin: 20rpx 24rpx;
  padding: 28rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}
.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-bottom: 20rpx;
}
.desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F5F5F0;
}
.feature-item:last-child { border-bottom: none; }
.feature-icon-wrap {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}
.feature-info { flex: 1; }
.feature-title { font-size: 28rpx; color: #1A1A1A; font-weight: 500; display: block; }
.feature-desc { font-size: 24rpx; color: #AAAAAA; margin-top: 4rpx; display: block; }

.contact-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F5F5F0;
}
.contact-row:last-child { border-bottom: none; }
.contact-label { font-size: 28rpx; color: #1A1A1A; }
.contact-value { font-size: 28rpx; color: #AAAAAA; }
.contact-value.link { color: #5B8C3E; }

.footer {
  text-align: center;
  padding: 40rpx 0 60rpx;
}
.copyright { font-size: 22rpx; color: #ccc; }