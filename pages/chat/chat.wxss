/* pages/chat/chat.wxss — iOS 风格 */
.page { height: 100vh; background: #F2F2F7; }

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 300rpx;
  gap: 20rpx;
}
.empty-text { font-size: 28rpx; color: #8E8E93; }

.conversation-list { height: 100vh; }

.conversation-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #fff;
  position: relative;
}
/* iOS 缩进分隔线 */
.conversation-item::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 152rpx;
  right: 0;
  height: 1rpx;
  background: rgba(60, 60, 67, 0.12);
}
.conversation-item:last-child::after { display: none; }
.conversation-item:active { background: #E5E5EA; }

.avatar-wrap { position: relative; flex-shrink: 0; margin-right: 24rpx; }
.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: #E5E5EA;
}
/* iOS 红色未读 badge */
.unread-dot {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  min-width: 36rpx;
  height: 36rpx;
  background: #FF3B30;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
  border: 4rpx solid #fff;
}
.unread-dot text {
  font-size: 20rpx;
  color: #fff;
  font-weight: 600;
}

.conv-content { flex: 1; overflow: hidden; }
.conv-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}
.conv-name {
  font-size: 30rpx;
  color: #1C1C1E;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 400rpx;
}
.conv-time { font-size: 24rpx; color: #AEAEB2; flex-shrink: 0; }
.conv-last {
  font-size: 26rpx;
  color: #8E8E93;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
