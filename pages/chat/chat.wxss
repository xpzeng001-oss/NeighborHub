.page { height: 100vh; background: #f5f6fa; }

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 300rpx;
  gap: 20rpx;
}
.empty-text { font-size: 28rpx; color: #bbb; }

.conversation-list { height: 100vh; }

.conversation-item {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}
.conversation-item:active { background: #f8f8f8; }

.avatar-wrap { position: relative; flex-shrink: 0; margin-right: 24rpx; }
.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: #f0f0f0;
}
.unread-dot {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  min-width: 36rpx;
  height: 36rpx;
  background: #ff3b30;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
}
.unread-dot text {
  font-size: 20rpx;
  color: #fff;
  font-weight: 600;
}

.conv-content { flex: 1; overflow: hidden; }
.conv-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}
.conv-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 400rpx;
}
.conv-time { font-size: 24rpx; color: #bbb; flex-shrink: 0; }
.conv-last {
  font-size: 26rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
