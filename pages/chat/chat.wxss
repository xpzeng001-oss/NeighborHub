/* pages/chat/chat.wxss — 暖色卡片风格 */
.page {
  min-height: 100vh;
  background: #F7F8F3;
  overflow-x: hidden;
  box-sizing: border-box;
}

/* 大标题 */
.page-header {
  padding: 20rpx 36rpx 24rpx;
  background: #F7F8F3;
}
.page-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1A1A1A;
}

/* 未读消息横幅 */
.unread-banner {
  display: flex;
  align-items: center;
  margin: 0 28rpx 20rpx;
  padding: 20rpx 28rpx;
  background: #EFF6E8;
  border-radius: 16rpx;
  border: 1rpx solid #D4E8BE;
}
.banner-icon-wrap {
  margin-right: 12rpx;
  flex-shrink: 0;
}
.banner-text {
  font-size: 26rpx;
  color: #5B8C3E;
}
.banner-count {
  font-weight: 700;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 300rpx;
  gap: 20rpx;
}
.empty-text { font-size: 28rpx; color: #AAAAAA; }

/* 会话列表 */
.conversation-list {
  height: calc(100vh - 300rpx);
  padding: 0 28rpx;
  box-sizing: border-box;
  width: 100%;
}

/* 卡片 */
.conversation-card {
  display: flex;
  align-items: center;
  padding: 32rpx 28rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
  box-sizing: border-box;
  overflow: hidden;
}
.conversation-card:active {
  background: #F7F8F3;
}

/* 头像 */
.avatar-wrap {
  position: relative;
  flex-shrink: 0;
  margin-right: 20rpx;
}
.avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: #EFF6E8;
}

/* 未读角标 */
.unread-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 34rpx;
  height: 34rpx;
  background: #E8636F;
  border-radius: 17rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
  border: 3rpx solid #fff;
}
.unread-badge text {
  font-size: 20rpx;
  color: #fff;
  font-weight: 600;
}

/* 内容 */
.conv-content {
  flex: 1;
  overflow: hidden;
}
.conv-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}
.conv-name {
  font-size: 30rpx;
  color: #1A1A1A;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 360rpx;
}
.conv-time {
  font-size: 24rpx;
  color: #AAAAAA;
  flex-shrink: 0;
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.conv-topic {
  font-size: 24rpx;
  color: #AAAAAA;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 4rpx;
}
.conv-last {
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
