.page { min-height: 100vh; background: #F7F8F3; }

.score-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0 50rpx;
  background: #1A1A1A;
  color: #fff;
}
.score-num { font-size: 96rpx; font-weight: 700; line-height: 1; }
.score-label { font-size: 26rpx; color: #AAAAAA; margin-top: 8rpx; }
.level-badge {
  margin-top: 24rpx;
  padding: 8rpx 32rpx;
  border-radius: 30rpx;
}
.level-badge text { font-size: 24rpx; color: #fff; font-weight: 600; }

.section {
  margin-top: 20rpx;
  background: #fff;
  padding: 28rpx 30rpx;
}
.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1A1A1A;
  margin-bottom: 24rpx;
}

.level-row { display: flex; gap: 16rpx; }
.level-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  background: #F5F5F0;
  border-radius: 12rpx;
  gap: 8rpx;
}
.level-range { font-size: 24rpx; color: #AAAAAA; }
.level-name { font-size: 26rpx; font-weight: 600; }

.rule-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F5F5F0;
}
.rule-item:last-child { border-bottom: none; }
.rule-left { display: flex; flex-direction: column; gap: 6rpx; }
.rule-action { font-size: 28rpx; color: #1A1A1A; }
.rule-desc { font-size: 22rpx; color: #AAAAAA; }
.rule-point { font-size: 30rpx; font-weight: 600; }
.rule-point.plus { color: #5B8C3E; }
.rule-point.minus { color: #E8636F; }
