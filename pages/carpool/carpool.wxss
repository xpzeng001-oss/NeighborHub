/* pages/carpool/carpool.wxss */
.page { background: #F7F8F3; min-height: 100vh; display: flex; flex-direction: column; }

/* 分类Tab */
.cp-tabs {
  display: flex;
  padding: 0 32rpx;
  gap: 8rpx;
  background: #F7F8F3;
}
.cp-tab {
  padding: 24rpx 28rpx;
  font-size: 28rpx;
  color: #AAAAAA;
  position: relative;
}
.cp-tab.active {
  color: #1A1A1A;
  font-weight: 700;
}
.cp-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background: #5B8C3E;
  border-radius: 3rpx;
}

.scroll-content { flex: 1; height: 0; }
.trip-list { padding: 16rpx 32rpx; }

.trip-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}

/* 类型标签 */
.card-type {
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 18rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}
.type-offer { background: #EFF6E8; color: #5B8C3E; }
.type-seek { background: rgba(74, 144, 217, 0.08); color: #4A90D9; }

/* 用户信息 */
.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background: #F7F8F3;
}
.user-info { flex: 1; }
.user-name { font-size: 28rpx; font-weight: 600; color: #1A1A1A; display: block; }
.user-building { font-size: 22rpx; color: #AAAAAA; }
.time { font-size: 22rpx; color: #AAAAAA; }

/* 内容 */
.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1A1A1A;
  display: block;
  margin-bottom: 12rpx;
  line-height: 1.4;
}
.card-desc {
  font-size: 26rpx;
  color: #AAAAAA;
  line-height: 1.7;
  display: block;
}

/* 路线信息 */
.route-section {
  margin-top: 20rpx;
  padding: 20rpx 24rpx;
  background: #F7F8F3;
  border-radius: 16rpx;
}
.route-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.route-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}
.dot-start { background: #5B8C3E; }
.dot-end { background: #4A90D9; }
.route-line {
  width: 2rpx;
  height: 24rpx;
  background: #ddd;
  margin-left: 7rpx;
  margin-top: 4rpx;
  margin-bottom: 4rpx;
}
.route-text {
  font-size: 26rpx;
  color: #1A1A1A;
  font-weight: 500;
}

/* 详细信息 */
.info-section {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 16rpx;
}
.info-row {
  display: flex;
  align-items: center;
  gap: 6rpx;
}
.info-text { font-size: 24rpx; color: #AAAAAA; }
.fee {
  font-size: 26rpx;
  color: #5B8C3E;
  font-weight: 700;
}

/* 底部 */
.card-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 24rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #F5F5F0;
}
.participant-avatars {
  display: flex;
  align-items: center;
}
.p-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: -10rpx;
  border: 3rpx solid #fff;
  background: #F7F8F3;
}
.p-count {
  font-size: 22rpx;
  color: #AAAAAA;
  margin-left: 16rpx;
}

.card-actions { display: flex; gap: 12rpx; margin-left: auto; }
.btn-contact, .btn-join {
  width: 150rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 24rpx;
  font-weight: 600;
  border-radius: 16rpx;
  text-align: center;
  white-space: nowrap;
}
.btn-contact {
  background: #F7F8F3;
  color: #1A1A1A;
  border: none;
}
.btn-join {
  background: #5B8C3E;
  color: #fff;
  border: none;
}
.btn-joined {
  background: #EFF6E8;
  color: #5B8C3E;
}
.btn-disabled {
  background: #F5F5F0;
  color: #AAAAAA;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 200rpx 0;
  gap: 20rpx;
}
.empty-text {
  font-size: 28rpx;
  color: #AAAAAA;
}

/* 浮动按钮 */
.fab-btn {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #7CB342 0%, #5B8C3E 100%);
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(91, 140, 62, 0.4);
}
.fab-btn:active { opacity: 0.85; }
