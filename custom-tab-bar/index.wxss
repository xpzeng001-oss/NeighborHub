.tab-bar {
  display: flex;
  align-items: flex-end;
  justify-content: space-around;
  background: #ffffff;
  height: 110rpx;
  padding-bottom: 10rpx;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.06);
  position: relative;
}

.safe-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  padding-top: 10rpx;
}

.tab-label {
  font-size: 22rpx;
  margin-top: 4rpx;
}

.publish-item {
  position: relative;
}

.publish-btn {
  width: 100rpx;
  height: 100rpx;
  background: #E6A023;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: -40rpx;
  box-shadow: 0 8rpx 24rpx rgba(230, 160, 35, 0.35);
}

.publish-btn:active {
  background: #C8880D;
}
