.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
  display: flex;
  align-items: flex-end;
  justify-content: space-around;
  height: 110rpx;
  background: #fff;
  box-shadow: 0 -2rpx 16rpx rgba(0, 0, 0, 0.05);
}

.safe-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 普通Tab项 */
.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 110rpx;
  position: relative;
}

.tab-item text {
  font-size: 20rpx;
  color: #BBBBBB;
  margin-top: 4rpx;
}

.tab-item.active text {
  color: #5B8C3E;
  font-weight: 600;
}

/* 中间发布按钮 */
.tab-center {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 110rpx;
}

.fab-btn {
  width: 96rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #7CB342 0%, #5B8C3E 100%);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 36rpx;
  box-shadow: 0 8rpx 24rpx rgba(91, 140, 62, 0.4);
}

.fab-btn:active {
  opacity: 0.85;
}

/* 消息未读红点 */
.msg-tab { position: relative; }
.unread-badge {
  position: absolute;
  top: 14rpx;
  right: 50%;
  margin-right: -36rpx;
  min-width: 30rpx;
  height: 30rpx;
  background: #E8636F;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 6rpx;
}
.unread-badge text {
  font-size: 18rpx;
  color: #fff;
  font-weight: 600;
  margin-top: 0;
}
