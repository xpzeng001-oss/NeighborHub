.tab-bar-wrap {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
  padding: 0 20rpx 16rpx;
}

.safe-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-inner {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

/* 左侧白色胶囊 */
.tab-pill {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: #ffffff;
  height: 96rpx;
  border-radius: 48rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.07);
  padding: 0 16rpx;
  width: 420rpx;
}

.pill-item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
}

.pill-item:active {
  background: rgba(0, 0, 0, 0.04);
}

.pill-item.active {
  background: rgba(200, 255, 0, 0.25);
}

/* 右侧大圆按钮 */
.publish-fab {
  width: 96rpx;
  height: 96rpx;
  background: #1A1A1A;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
  flex-shrink: 0;
}

.publish-fab:active {
  background: #333333;
}
